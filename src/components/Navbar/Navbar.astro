---
import Menu from "./Menu";
import NavItem from "./NavItem.astro";

const navItems = [
  { text: "Home", href: "#" },
  { text: "New", href: "#" },
  { text: "Popular", href: "#" },
  { text: "Trending", href: "#" },
  { text: "Categories", href: "#" },
];
---

<div class="flex justify-between items-center">
  <img src="images/logo.svg" alt="logo" />

  <div class="flex gap-10 md:hidden">
    {navItems.map((item) => <NavItem text={item.text} href={item.href} />)}
  </div>
  <Menu links={navItems} client:load />
</div>
