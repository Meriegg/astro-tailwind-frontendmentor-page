---
interface Props {
  title: string;
  description: string;
  image: string;
  label: string;
  link: string;
}

const { title, description, image, label, link } = Astro.props;
---

<div class="flex gap-6" style="width: min(24rem, 100%)">
  <img src={image} alt="article cover" class="max-w-[130px] h-auto" />
  <div class="flex flex-col gap-4">
    <p class="text-4xl font-bold text-grayishBlue">{label}</p>
    <a
      href={link}
      class="transition-all duration-300 hover:text-softRed font-bold text-veryDarkBlue text-xl"
      >{title}</a
    >
    <p class="font-medium text-darkGrayishBlue">{description}</p>
  </div>
</div>
